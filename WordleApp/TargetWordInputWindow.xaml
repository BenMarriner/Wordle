<Window x:Class="WordleApp.TargetWordInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordleApp"
        mc:Ignorable="d"
        Title="Target Word Selection" Height="147" Width="261" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <TextBox x:Name="txtboxInput" TextWrapping="Wrap" VerticalAlignment="Center" Height="37" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" MaxLength="5" Margin="10,0,10,0" PreviewTextInput="ValidateTextBoxInput" KeyDown="txtboxInput_KeyDown"/>
        <Button x:Name="btn_Submit" Content="Submit" HorizontalAlignment="Center" Margin="0,95,0,16" VerticalAlignment="Top" Click="btnSubmit_Click"/>
        <Label x:Name="lblMessage" Content="Please choose a 5 letter target word:" HorizontalAlignment="Center" Margin="10,16,10,0" VerticalAlignment="Top" />

    </Grid>
</Window>
